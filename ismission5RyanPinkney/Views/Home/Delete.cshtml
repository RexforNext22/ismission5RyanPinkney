@{
    ViewData["Title"] = "Delete Application";
}

@model Movie


<!--Confirmation message-->
<h2>Confirm Deletion</h2>
<h3> Are you sure you want to delete @Model.sTitle?</h3>

<!--Form to confirm deletion-->
<form asp-action="Delete" method="post">

    <!--Button to cancel-->
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-primary">Cancel</a>

    <!--button to delete-->
    <button type="submit">Delete</button>

    <!--Hide the movie id in the form-->
    <input type="hidden" asp-for="movie_id" />
</form>