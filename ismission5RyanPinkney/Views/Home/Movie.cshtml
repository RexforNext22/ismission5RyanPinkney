<h3>Enter a movie</h3>

<!--Bring in the model-->
@model ismission5RyanPinkney.Models.Movie

<div>


    <form method="POST">

        <!--Field for title-->
        <label asp-for="sTitle">Title</label>
        <input asp-for="sTitle" /><br />

        <!--Field for Category-->
        <label asp-for="sCategory">Category</label>
        <input asp-for="sCategory" /><br />

        <!--Field for Year-->
        <label asp-for="sYear">Year:</label>
        <input asp-for="sYear" /><br />

        <!--Field for director-->
        <label asp-for="sDirector">Director:</label>
        <input asp-for="sDirector" /><br />

        <!--Field for rating-->
        <label asp-for="sRating">Rating:</label>
        <select asp-for="sRating">

            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>

        </select><br />

        <!--Field for lent to-->
        <label asp-for="sLentToName">Lent to:</label>
        <input asp-for="sLentToName" /><br />

        <!--Field for ediited-->
        <label asp-for="bIsEdited">Was the movie edited?:</label>
        <select asp-for="bIsEdited">

            <option value="">None</option>
            <option value="true">Yes</option>
            <option value="false">No</option>

        </select><br />

        <!--Field for Notes-->
        <label asp-for="sNotes">Notes</label>
        <textarea asp-for="sNotes" maxlength="25"></textarea><br /><br />

        <!--Field to submit-->
        <button type="submit">Submit</button>

    </form>
    <div asp-validation-summary="All"></div>
</div>